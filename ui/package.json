{
  "name": "fleetwatch",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@orbit/coordinator": "^0.16.0",
    "@orbit/core": "^0.16.0",
    "@orbit/data": "^0.16.0",
    "@orbit/indexeddb": "^0.16.0",
    "@orbit/jsonapi": "^0.16.0",
    "@orbit/memory": "^0.16.0",
    "@orbit/utils": "^0.16.0",
    "axios": "^0.19.0",
    "react": "^16.8.6",
    "react-datepicker": "^2.8.0",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-select": "^3.0.4",
    "react-toastify": "^5.3.2",
    "tailwindcss": "^1.0.5"
  },
  "scripts": {
    "build:css": "postcss src/styles/index.css -o src/index.css",
    "watch:css": "postcss src/styles/index.css -o src/index.css -w",
    "start": "yarn watch:css & BROWSER=none react-scripts start",
    "build": "yarn build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "yarn pretty-quick",
    "start-mock": "REACT_APP_MOCK=true yarn start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "cssnano": "^4.1.10",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0"
  }
}
